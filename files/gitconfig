[user]
	name = Riobard
	email = me@riobard.com
[core]
	excludesfile = ~/.gitignore_global
[alias]
    co = checkout
    st = status
    br = branch
[color]
	ui = auto
[push]
	default = simple
[url "git@github.com:"]
    # Force git to use SSH instead of HTTPS to talk to GitHub. This allows
    # `go get` to succeed with private GitHub repos. 
    insteadOf = https://github.com/
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
