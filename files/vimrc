        set macmeta
        map <M-j> <C-w>j
        map <M-k> <C-w>k
        map <M-h> <C-w>h
        map <M-l> <C-w>l

        " transparent background
        if &background == 'dark'
            "hi normal guibg=black
            "set transparency=5
        endif
    endif
endif



